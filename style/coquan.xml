<?xml version="1.0" encoding="ISO-8859-1"?>
<StyledLayerDescriptor version="1.0.0" xmlns="http://www.opengis.net/sld" xmlns:ogc="http://www.opengis.net/ogc"
  xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.opengis.net/sld http://schemas.opengis.net/sld/1.0.0/StyledLayerDescriptor.xsd">
  <NamedLayer>
    <Name>Co Quan</Name>
    <UserStyle>
      <Title>Co quan</Title>
      <Abstract>Dinh dang cho lop co quan</Abstract>
      <FeatureTypeStyle>
        <!--FeatureTypeName>Feature</FeatureTypeName-->        
		 <Rule>
			 <Name>Large</Name>
			 <MaxScaleDenominator>500000000</MaxScaleDenominator>
			 <PointSymbolizer>
				 <Graphic>
					<ExternalGraphic>
						<OnlineResource xlink:type="simple" xlink:href="images/company.png" />
						<Format>image/png</Format>
					</ExternalGraphic>
					 <Size>20</Size>
				 </Graphic>
			 </PointSymbolizer>			
			<TextSymbolizer>
				<Label>
					<ogc:Propertyname>ten</ogc:Propertyname>
				</Label>
				<Font>
					<CssParameter name="font-family">Times New Roman</CssParameter>
					<CssParameter name="font-size">13</CssParameter>
					<CssParameter name="font-style">normal</CssParameter>
				</Font>
				<LabelPlacement>
					 <PointPlacement>
						 <AnchorPoint>
							 <AnchorPointX>0.5</AnchorPointX>
							 <AnchorPointY>1.7</AnchorPointY>
						 </AnchorPoint>
						 <Displacement>
							 <DisplacementX>0</DisplacementX>
							 <DisplacementY>5</DisplacementY>
						 </Displacement>
					 </PointPlacement>
				 </LabelPlacement>				
				 <Halo>
			 		<Radius>2</Radius>
			 		<Fill>
			 		   <CssParameter name="fill">#FFFFFF</CssParameter>
			 		</Fill>
		 	    </Halo>
				 <VendorOption name="autoWrap">85</VendorOption>
			 </TextSymbolizer>		
		 </Rule>
		 <Rule>
			 <Name>Medium</Name>
			 <MinScaleDenominator>500000000</MinScaleDenominator>
			 <MaxScaleDenominator>1200000000</MaxScaleDenominator>
			 <PointSymbolizer>
			 <Graphic>				  
				<ExternalGraphic>
						<OnlineResource xlink:type="simple" xlink:href="images/company.png" />
						<Format>image/png</Format>
				</ExternalGraphic>
				<Size>12</Size>				
			 </Graphic>		
			 </PointSymbolizer>				 
		 </Rule> 
     </FeatureTypeStyle>
    </UserStyle>
  </NamedLayer>
</StyledLayerDescriptor>